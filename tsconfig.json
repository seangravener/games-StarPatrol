{
  "compilerOptions": {
    "types": ["node", "webpack", "jest", "reflect-metadata"],
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "target": "ES6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "paths": {
    "~*": ["./src/*"],
   },
  "include": ["types.d.ts", "webpack.config.js", "src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
